---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import TimeZone from "../components/TimeZoneCard.astro";
import ExperienceList from "../components/ExperienceList.astro";
import Now from "../components/Now.astro";
---

<script>
  import { stagger, spring, timeline, TimelineDefinition } from "motion";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    [
      ".loaderRef",
      { opacity: 0, pointerEvents: "none" },
      { easing: "ease-out" },
    ],
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Lucas Lemos - Software Developer"
  description="Embedded system engineer by degree, Software Developer by heart and life."
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-cols-4 lg:gap-4"
  >
    <IntroCard colSpan="md:col-span-3" />
    <ExperienceList
      colSpan="lg:col-span-1 md:col-span-2"
      rowSpan="md:row-span-2 lg:row-span-3"
    />
    <ContactsCard colSpan="md:col-span-1" rowSpan="" />
    <!-- <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-1"
      title="Blog"
      body="TODO"
    /> -->
    <TimeZone colSpan="lg:col-span-1 md:col-span-2" rowSpan="md:row-span-1" />
    <Now colSpan="md:col-span-1" />
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
      <p class="text-xs">
        © 2023 · Crafted with ♥️ using <a
          href="https://astro.build/"
          target="_blank"
          class="font-bold">Astro</a
        > by
        <a
          href="https://github.com/Ladvace/Grid-astro-portfolio"
          target="_blank"
          class="underline underline-offset-2">Gianmarco Cavallo</a
        > and adapted by
        <a
          href="https://github.com/LemosLucas/personal-website"
          target="_blank"
          class="underline underline-offset-2">Lucas Lemos</a
        >.
      </p>
    </Card>
  </main>
</Layout>
