---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
import SocialIcon from "./SocialIcon.astro";

interface Props {
  colSpan: string;
  rowSpan: string  
}

const { colSpan, rowSpan } = Astro.props;
---

<Card colSpan={`${colSpan || ""}`} rowSpan={`${rowSpan || ""}`}>
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">Contact Information</h1>
    </header>
    <address class="flex flex-col mt-4 not-italic">
      <h4 class="text-gray-500">Email</h4>
      <p><a href="mailto:me@lemosl.com.br">me@lemosl.com.br</a></p>
    </address>
    <div class="flex flex-col mt-4 w-fit">
      <h4 class="text-gray-500">Socials</h4>
      <ul class="mt-1">
        <li>
          <SocialIcon href={LINKS.linkedin} iconName="ri:linkedin-box-fill" iconText="LinkedIn" />
        </li>
        <li>
          <SocialIcon href={LINKS.github} iconName="ri:github-fill" iconText="Github" />
        </li>
      </ul>
    </div>
  </div>
</Card>
