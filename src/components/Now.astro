---
import Card from "./Card/index.astro";
import Pulse from "./Pulse.astro";

const { colSpan, rowSpan } = Astro.props;
---

<Card colSpan={`${colSpan || ""}`} rowSpan={`${rowSpan || ""}`}>
  <!-- <Card colSpan="md:col-span-1" rowSpan="md:row-span-1"> -->
  <div class="flex justify-between w-full items-start mb-2">
    <div class="flex flex-col">
      <h2>Now</h2>
    </div>
    <Pulse />
  </div>
  <p class="text-sm">
    Currently working as a System Development Engineer at Siemens
  </p>
</Card>
